@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>
                La nuova Pizza
            </h1>

            <form asp-controller="Pizza" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Nome:</strong>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Descrizione:</strong>
                    <input type="text" class="form-control" asp-for="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <strong>Url dell'immagine:</strong>
                    <input type="text" class="form-control" asp-for="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <strong>Prezzo:</strong>
                    <input type="text" class="form-control" asp-for="Prize">
                    <span asp-validation-for="Prize" class="text-danger"></span>

                </div>

                <button type="submit" class="btn btn-primary">Crea nuova pizza</button>
            </form>
        </div>
    </div>
</div>